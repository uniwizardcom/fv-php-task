<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/jquery-ui.min.js"></script>
        <link href='https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/themes/ui-lightness/jquery-ui.css' rel='stylesheet'>
        <script src="https://cdn.canvasjs.com/jquery.canvasjs.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="js/show_chart_static.js"></script>
        <script src="js/show_chart_dates.js"></script>
        <script src="js/show_chart_dynamic.js"></script>
        <script>
            $(window).on( "load", function() {
                showChartStatic();
                (new showChartDates({
                    'date_picker_from_id': 'chart_date_from',
                    'date_picker_to_id': 'chart_date_to',
                    'chart_id': 'chart_choice_dates'
                })).run();
                showChartDynamic();
            });
        </script>
    </head>
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        <div class="container-fluid">
            <div id="chart_static" style="height: 300px; width: 100%;"></div>
        </div>
        <hr />
        <div class="container-fluid text-center">
            <div class="row">
                <div class="col-6">
                    Data Od: <input type="text" id="chart_date_from" style="height: 25px; width: 160px;" />
                </div>
                <div class="col-6">
                    Data Do: <input type="text" id="chart_date_to" style="height: 25px; width: 160px;" />
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div id="chart_choice_dates" style="height: 300px; width: 100%;"></div>
        </div>
        <hr />
        <div class="container-fluid">
            <div id="chart_dynamic" style="height: 300px; width: 100%;"></div>
        </div>
    </body>
</html>
